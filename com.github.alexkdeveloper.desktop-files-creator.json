{
    "app-id" : "com.github.alexkdeveloper.desktop-files-creator",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "41",
    "sdk" : "org.gnome.Sdk",
    "command" : "desktop-files-creator",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home:ro",
        "--filesystem=xdg-data/applications:create"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "libsass",
            "sources": [
                {
                    "type" : "git",
                    "url" : "https://github.com/sass/libsass.git",
                    "tag": "3.6.5"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name": "sassc",
            "sources": [
                {
                    "type" : "git",
                    "url" : "https://github.com/sass/sassc.git",
                    "tag": "3.6.2"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name" : "pango",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dintrospection=disabled"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/pango.git",
                    "tag": "1.50.5"
                }
            ]
        },
        {
            "name": "gtk",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dbuild-examples=false",
                "-Dbuild-tests=false"
            ],
            "sources": [
                {
                  "type": "git",
                  "url": "https://gitlab.gnome.org/GNOME/gtk.git",
                  "tag": "4.6.1"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dgtk_doc=false",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "tag": "1.0.2"
                }
            ]
        },
        {
            "name" : "Desktop Files Creator",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/alexkdeveloper/desktop-files-creator.git",
                    "tag": "1.0.6",
                    "commit": "abbfd9f5685f6e65157a4f8b063eb1b5dff097dc"
                }
            ]
        }
    ]
}
